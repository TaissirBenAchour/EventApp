<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="clip_horizontal"
    android:gravity="center">

   <RadioGroup
       android:layout_marginTop="10dp"
       android:id="@+id/rbtn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="100dp">
       <RadioButton
           android:id="@+id/day_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="per day"
           android:fontFamily="@font/orbitronregular"/>
       <RadioButton
           android:id="@+id/week_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="per week"
           android:fontFamily="@font/orbitronregular"/>
       <RadioButton
           android:id="@+id/month_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="per month"
           android:fontFamily="@font/orbitronregular"/>
   </RadioGroup>

<LinearLayout
    android:id="@+id/layout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_margin="5dp"
    android:layout_below="@id/rbtn"
    >
    <EditText
        android:id="@+id/editTextAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:ems="10"
        android:background="@drawable/edittext"
        android:hint="...">
        <requestFocus />
    </EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dt"
        android:background="#c6eaad9e"
        android:padding="10dp"
        android:textColor="@color/white"/>
</LinearLayout>
    <View
        android:layout_below="@id/layout1"
android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.2"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agreement"
        android:textColor="@color/medium_grey"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="10dp"/>


</RelativeLayout>