<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/messageOfSender_id"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/profile_pic"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="22dp"
    android:layout_marginStart="22dp"
    android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/custom_message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:background="@drawable/shape_of_sent_message"
        android:padding="10dp"
        android:layout_alignBottom="@+id/messageOfSender_id"
        android:layout_toRightOf="@+id/messageOfSender_id"
        android:layout_toEndOf="@+id/messageOfSender_id"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />


</RelativeLayout>