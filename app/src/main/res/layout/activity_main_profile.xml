<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.cassio.Graduation_Project.friendsProfileActivity">>
<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape2profile"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grad1"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/profile_pic" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="45dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <ImageButton
                            android:id="@+id/add_request"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/interested"
                            android:tint="@color/background1"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_check_black_24dp"
                           />

                        <ImageButton

                            android:id="@+id/clear_request"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/interested"
                            android:tint="@color/background1"
                            android:src="@drawable/ic_clear_black_24dp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/username_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="username"
                        android:textColor="#FFF3E0"
                        android:textSize="35dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/userstatus_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="cursive"
                    android:text="here is a brief description of the user"
                    android:textColor="#be5406"
                    android:textSize="20dp" />

                </LinearLayout>



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/posts_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_margin="9dp">

                </android.support.v7.widget.RecyclerView>

</LinearLayout>

</LinearLayout>