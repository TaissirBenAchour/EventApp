<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
    layout="@layout/toolbar_choice_activity"
    android:id="@+id/toolbar">
</include>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="384dp"
            android:layout_height="400dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/make_choice"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/add_events_id"
        style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@color/background"
    android:fontFamily="casual"
    android:text="I am an event planner "
    android:textAllCaps="false"
    android:textColor="@color/white" />

    <Button
        android:id="@+id/find_events_id"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:backgroundTint="@color/darkBackground"
    android:fontFamily="casual"
    android:text="I am confused "
    android:textAllCaps="false"
    android:textColor="@color/cardview_light_background" />

</LinearLayout>
    </LinearLayout>


