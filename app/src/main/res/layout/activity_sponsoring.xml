<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cassio.Graduation_Project.SponsoringActivity"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/respective"
        android:gravity="center"
        android:text="Sponsor !"
        android:textSize="65dp"
        android:paddingTop="20dp"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sponsoring"
        android:gravity="center"
        android:padding="15dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enjoy being a Sponsor"
        android:gravity="center"
        android:padding="15dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/yesforsponsoring_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ok"
            android:layout_gravity="center"
            android:tint="#89b7c9"
            android:onClick="yesforsponsoring"/>

        <ImageView

            android:layout_width="55dp"
            android:layout_height="50dp"
            android:src="@drawable/what"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:tint="#c9898d"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/noforsponsoring_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="skip"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="300dp"
        android:textSize="20dp"
        android:textColor="@color/medium_grey"
        android:onClick="noforsponsoring"/>

</LinearLayout>


</LinearLayout>
