<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/aboutus"
    tools:context="com.example.cassio.Graduation_Project.AppealFragments.AppealsList">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      android:layout_marginTop="10dp">
      <android.support.v7.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_margin="5dp"
              android:background="@drawable/aboutus">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Appeals for Events"
                  android:textStyle="bold"
                  android:layout_gravity="center"
                  android:fontFamily="@font/kaushanscriptregular"/>

              <android.support.v7.widget.RecyclerView
                  android:id="@+id/listAppeals_id"
                  android:layout_width="160dp"
                  android:layout_marginTop="5dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="55dp"/>

          </LinearLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dp">
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_margin="5dp"
              android:background="@drawable/aboutus">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="Appeals for Committee"
                  android:textStyle="bold"
                  android:fontFamily="@font/kaushanscriptregular"/>
              <android.support.v7.widget.RecyclerView
                  android:id="@+id/listcommitteeAppeal_id"
                  android:layout_marginTop="5dp"
                  android:layout_width="160dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="55dp"
                  />
          </LinearLayout>
      </android.support.v7.widget.CardView>

  </LinearLayout>
  </ScrollView>




</RelativeLayout>