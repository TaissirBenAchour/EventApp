<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        android:layout_weight="0.3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
        <LinearLayout
            android:id="@+id/linear_homelist_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:background="@drawable/position1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_id"
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_pic" />

            <TextView
                android:id="@+id/name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/kellyslabregular"
                android:text="name" />
            <TextView
                android:id="@+id/time_post"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_marginLeft="200dp"
                android:textColor="@color/medium_grey"
                android:text="time"
                 />
    </LinearLayout>
            <ImageView
                android:id="@+id/eventimage_id"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/imageplaceholder"/>
        <TextView
            android:id="@+id/post_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="the post is"
            android:background="#f7f7f7"
            android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightorange"
                android:text="Interested"
                android:background="@drawable/imagesplash"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/kaushanscriptregular"/>
        </LinearLayout>
            </android.support.v7.widget.CardView>


</LinearLayout>